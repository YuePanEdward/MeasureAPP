<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context="com.test.measureapp.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/imageView"
        android:src="@drawable/measuretop"
        android:adjustViewBounds="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="goto6Activity"
        android:scaleType="fitXY"
        android:background="@drawable/measuretop" />

    <ImageButton
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:id="@+id/imageButton"
        android:src="@drawable/measure01"
        android:scaleType="fitXY"
        android:layout_below="@+id/imageView"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:background="@drawable/measure01"
        android:onClick="goto2Activity"
        />


    <ImageButton
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:id="@+id/imageButton2"
        android:src="@drawable/measure02"
        android:scaleType="fitXY"
        android:background="@drawable/measure02"
        android:layout_below="@+id/imageButton"
        android:layout_alignLeft="@+id/imageButton"
        android:layout_alignStart="@+id/imageButton"
        android:onClick="goto3Activity"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/imageButton3"
        android:src="@drawable/measure03"
        android:scaleType="fitXY"
        android:background="@drawable/measure03"
        android:layout_below="@+id/imageButton2"
        android:layout_alignLeft="@+id/imageButton2"
        android:layout_alignStart="@+id/imageButton2"
        android:onClick="goto4Activity"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/imageButton4"
        android:src="@drawable/measure04"
        android:scaleType="fitXY"
        android:background="@drawable/measure04"
        android:layout_below="@+id/imageButton3"
        android:layout_alignLeft="@+id/imageButton3"
        android:layout_alignStart="@+id/imageButton3"
        android:onClick="goto5Activity"
        />

</RelativeLayout>
